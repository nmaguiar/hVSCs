VERSION 0.6

build-x64:
	FROM DOCKERFILE --platform=linux/amd64 .
        SAVE IMAGE --push nmaguiar/hvscs:latest

squash-x64:
        BUILD +build-x64

        LOCALLY 
        RUN ojob /tmp/a.yaml image=nmaguiar/hvscs:latest_linux_amd64 tag=latest_linux_amd64

build-arm:
	FROM DOCKERFILE --platform=linux/arm64 .
        SAVE IMAGE --push nmaguiar/hvscs:latest

squash-arm:
        BUILD +build-arm
       
        LOCALLY 
        RUN ojob /tmp/a.yaml image=nmaguiar/hvscs:latest_linux_arm64 tag=latest_linux_arm64

build:
	BUILD +build-x64
        BUILD +build-arm

squash:
	BUILD +build-x64
        BUILD +build-arm
 	BUILD +squash-x64
 	BUILD +squash-arm       
